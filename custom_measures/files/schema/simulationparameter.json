{
    "title": "SimulationParameter",
    "description": "It is the complete set of EnergyPlus Simulation Settings.",
    "type": "object",
    "properties": {
      "type": {
        "title": "Type",
        "enum": [
          "SimulationParameter"
        ]
      },
      "output": {
        "$ref": "#/definitions/SimulationOutput"
      },
      "run_period": {
        "$ref": "#/definitions/RunPeriod"
      },
      "timestep": {
        "title": "Timestep",
        "default": 6,
        "minimum": 1,
        "type": "integer"
      },
      "simulation_control": {
        "$ref": "#/definitions/SimulationControl"
      },
      "shadow_calculation": {
        "$ref": "#/definitions/ShadowCalculation"
      },
      "sizing_parameter": {
        "$ref": "#/definitions/SizingParameter"
      }
    },
    "required": [
      "type"
    ],
    "definitions": {
      "SimulationOutput": {
        "title": "SimulationOutput",
        "description": "Lists the desired outputs from the simulation and the format in which to report them.",
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "enum": [
              "SimulationOutput"
            ]
          },
          "reporting_frequency": {
            "title": "Reporting_Frequency",
            "default": "Hourly",
            "enum": [
              "Timestep",
              "Hourly",
              "Daily",
              "Monthly",
              "Annual"
            ],
            "type": "string"
          },
          "include_sqlite": {
            "title": "Include_Sqlite",
            "default": true,
            "type": "boolean"
          },
          "include_html": {
            "title": "Include_Html",
            "default": false,
            "type": "boolean"
          },
          "outputs": {
            "title": "Outputs",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "summary_reports": {
            "title": "Summary_Reports",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "type"
        ]
      },
      "Date": {
        "title": "Date",
        "description": "Date.",
        "type": "object",
        "properties": {
          "is_leap_year": {
            "title": "Is_Leap_Year",
            "description": "A boolean to indicate if datetime is for a leap year. Default is `false`.",
            "default": false,
            "type": "boolean"
          },
          "month": {
            "title": "Month",
            "description": "A value for month between `1`-`12`. Default is `1`.",
            "default": 1,
            "minimum": 1,
            "maximum": 12,
            "type": "integer"
          },
          "day": {
            "title": "Day",
            "description": "A value for day between `1`-`31`. Default is `1`.",
            "default": 1,
            "minimum": 1,
            "maximum": 31,
            "type": "integer"
          }
        }
      },
      "DaylightSavingTime": {
        "title": "DaylightSavingTime",
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "enum": [
              "DaylightSavingTime"
            ]
          },
          "start_date": {
            "$ref": "#/definitions/Date"
          },
          "end_date": {
            "$ref": "#/definitions/Date"
          }
        },
        "required": [
          "type",
          "start_date",
          "end_date"
        ]
      },
      "RunPeriod": {
        "title": "RunPeriod",
        "description": "Used to describe the time period over which to run the simulation.",
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "enum": [
              "RunPeriod"
            ]
          },
          "start_date": {
            "$ref": "#/definitions/Date"
          },
          "end_date": {
            "$ref": "#/definitions/Date"
          },
          "start_day_of_week": {
            "title": "Start_Day_Of_Week",
            "default": "Sunday",
            "enum": [
              "Sunday",
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday"
            ],
            "type": "string"
          },
          "holidays": {
            "title": "Holidays",
            "type": "array",
            "items": {
              "$ref": "#/definitions/Date"
            }
          },
          "daylight_savings_time": {
            "$ref": "#/definitions/DaylightSavingTime"
          }
        },
        "required": [
          "type",
          "start_date",
          "end_date"
        ]
      },
      "SimulationControl": {
        "title": "SimulationControl",
        "description": "Used to specify which types of calculations to run.",
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "enum": [
              "SimulationControl"
            ]
          },
          "do_zone_sizing": {
            "title": "Do_Zone_Sizing",
            "default": true,
            "type": "boolean"
          },
          "do_system_sizing": {
            "title": "Do_System_Sizing",
            "default": true,
            "type": "boolean"
          },
          "do_plant_sizing": {
            "title": "Do_Plant_Sizing",
            "default": true,
            "type": "boolean"
          },
          "run_for_run_periods": {
            "title": "Run_For_Run_Periods",
            "default": true,
            "type": "boolean"
          },
          "run_for_sizing_periods": {
            "title": "Run_For_Sizing_Periods",
            "default": false,
            "type": "boolean"
          }
        },
        "required": [
          "type"
        ]
      },
      "ShadowCalculation": {
        "title": "ShadowCalculation",
        "description": "Used to describe settings for EnergyPlus shadow calculation.",
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "enum": [
              "ShadowCalculation"
            ]
          },
          "solar_distribution": {
            "title": "Solar_Distribution",
            "default": "FullInteriorAndExteriorWithReflections",
            "enum": [
              "MinimalShadowing",
              "FullExterior",
              "FullInteriorAndExterior",
              "FullExteriorWithReflections",
              "FullInteriorAndExteriorWithReflections"
            ],
            "type": "string"
          },
          "calculation_frequency": {
            "title": "Calculation_Frequency",
            "default": 30,
            "minimum": 1,
            "type": "integer"
          },
          "calculation_method": {
            "title": "Calculation_Method",
            "default": "AverageOverDaysInFrequency",
            "enum": [
              "AverageOverDaysInFrequency",
              "TimestepFrequency"
            ],
            "type": "string"
          },
          "maximum_figures": {
            "title": "Maximum_Figures",
            "description": "Number of allowable figures in shadow overlap calculations.",
            "default": 15000,
            "minimum": 200,
            "type": "integer"
          }
        },
        "required": [
          "type"
        ]
      },
      "SizingParameter": {
        "title": "SizingParameter",
        "description": "Allows the user to specify global heating and cooling sizing ratios.",
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "enum": [
              "SizingParameter"
            ]
          },
          "heating_factor": {
            "title": "Heating_Factor",
            "description": "The global heating sizing ratio applied to all of the zone design heating loads and air flow rates.",
            "default": 1.25,
            "exclusiveMinimum": 0,
            "type": "number"
          },
          "cooling_factor": {
            "title": "Cooling_Factor",
            "description": "The global cooling sizing ratio applied to all of the zone design cooling loads and air flow rates.",
            "default": 1.25,
            "exclusiveMinimum": 0,
            "type": "number"
          }
        },
        "required": [
          "type"
        ]
      }
    }
  }
  